<div class="container">
	<h2>User info</h2>
	 <%= form_for(@user) do |f| %>
       <% if @user.errors.any? %>
	      <div class="error_message">
	          <h2><strong><%= @user.errors.count %>errors prohibited this obj from being saved:</strong></h2>
	          <ul>
	           <% @user.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
	           <% end %>
	          </ul>
	      </div>
	   <% end %>

		<div class="field">
			<label for="user_name">Name</label>
			<%= f.text_field :name %>
		</div>

		<div class="field">
			<label for="user_profile_image">Image</label>
			<%= f.attachment_field :profile_image %>
		</div>

		<div class="field">
			<label for="user_introduction">Introduction</label>
			<%= f.text_area :introduction %>
	    </div>

   	<p><%= f.submit "Update User" %></p>
	<% end %>
</div>



