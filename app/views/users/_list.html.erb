<div class="container">
  <%= flash[:notice] %>

   <div class="row">
      <div class="col-xs-3">

        <h2>User info</h2>
          <%= attachment_image_tag user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= user.introduction %></th>
                </tr>
              </tbody>
             </table>

            <%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_id" %>
            <br>

        <h2>New book</h2>
          <%= form_for(book) do |f| %>
            <% if book.errors.any? %>
              <div class="error_message">
                  <h2><strong><%= book.errors.count %>errors prohibited this obj from being saved:</strong></h2>
                  <ul>
                  <% book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
            <% end %>

             <div class="field row">
               <h4>Title</h4>
               <%= f.text_field :title, class: "col-xs-12" %>
             </div>
             <div class="field row">
               <h4>Opinion</h4>
               <%= f.text_area :body, class: "col-xs-12" %>
             </div>
             <div class="actions row">
               <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
             </div>
           <% end %>
      </div>
