<%= render 'books/list', book: @newbook, user:@book.user %>
      <div class="col-xs-9">
          <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
              <tbody>
                  <tr>
                    <td><%= attachment_image_tag @book.user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
                      <br>
                    <%= link_to @book.user.name, user_path(@book.user) %>
                    </td>
                    <td>
                      <%= link_to book_path do %>
                      <%= @book.title %>
                      <% end %>
                    </td>
                    <td><%= @book.body %></td>
                    <td>
                      <% if @book.user == current_user %>
                        <td><%= link_to"Edit", edit_book_path(@book), class: "btn-sm btn-success" %></td>
                        <td><%= link_to"Destroy", book_path(@book),  method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
                      <% end %>
                    </td>
                  </tr>
              </tbody>
            </table>
      </div>

  </div>
</div>

